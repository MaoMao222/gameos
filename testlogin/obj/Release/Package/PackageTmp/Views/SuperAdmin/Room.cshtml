@model IEnumerable<testlogin.EFModels.game_config_room>
@{
    ViewBag.Title = "Room";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">房间管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='@Url.Action("RoomCreate", "SuperAdmin")'">添加房间</button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>gameid</th>
                            <th>name</th>
                            <th>roomid</th>
                            <th>tablecount</th>
                            <th>chaircount</th>
                            <th>roomname</th>
                            <th>roomtype</th>
                            <th>roommode</th>
                            <th>address</th>
                            <th>port</th>
                            <th>modulename</th>
                            <th>rulegame</th>
                            <th>ruleenter</th>
                            <th>rulecustom</th>
                            <th>status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item1 in Model)
                        {

                            <tr class="gradeA">
                                <td>@item1.id</td>
                                <td>@item1.gameid</td>
                                <td>@item1.name</td>
                                <td class="center">@item1.roomid</td>
                                <td class="center">@item1.tablecount</td>
                                <td class="center">@item1.chaircount</td>
                                <td class="center">@item1.roomname</td>
                                <td class="center">@item1.roomtype</td>
                                <td class="center">@item1.roommode</td>
                                <td class="center">@item1.address</td>
                                <td class="center">@item1.port</td>
                                <td class="center">@item1.modulename</td>
                                <td class="center">@item1.rulegame</td>
                                <td class="center">@item1.ruleenter</td>
                                <td class="center">@item1.rulecustom</td>
                                <td class="center">@item1.status</td>
                                @*<td class="center">@Html.ActionLink("修改", "AWEdit", new { id = item1.id })</td>*@
                                <td class="center">@Html.ActionLink("删除", "RoomDelete", new { id = item1.id }, new { onclick = " if (confirm('确定删除?') == false) return false ;" })</td>

                            </tr>

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
        </div>
    </div>
</div>


