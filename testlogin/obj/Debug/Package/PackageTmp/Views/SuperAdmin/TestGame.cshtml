@model IEnumerable<testlogin.EFModels.game_config_test_game>
@{
    ViewBag.Title = "TestGame";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">游戏测试</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='@Url.Action("TestGameCreate", "SuperAdmin")'">添加测试</button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>玩家id</th>
                            <th>count</th>
                            <th>min_niu</th>
                            <th>max_niu</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item1 in Model)
                        {

                            <tr class="gradeA">
                                <td>@item1.user_id</td>
                                <td>@item1.count</td>
                                <td>@item1.min_niu</td>
                                <td class="center">@item1.max_niu</td>
                                <td class="center">@Html.ActionLink("修改", "TestGameEdit", new { id = item1.user_id })</td>
                                <td class="center">@Html.ActionLink("删除", "TestGameDelete", new { id = item1.user_id }, new { onclick = " if (confirm('确定删除?') == false) return false ;" })</td>

                            </tr>

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
        </div>
    </div>
</div>

