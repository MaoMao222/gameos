@model IEnumerable<testlogin.Models.AgentModel>

@{
    ViewBag.Title = "AgentAll";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";

}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">代理管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='@Url.Action("AgentCreate", "SuperAdmin")'">添加代理</button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            @*<th>代理ID</th>*@
                            <th>用户名</th>
                            <th>姓名</th>
                            <th>代理等级</th>
                            <th>可用金额</th>
                            <th>累计收益</th>
                            <th>所在地区</th>
                            <th>查看</th>
                            @*<th>删除</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item1 in Model)
                        {
                            string levelname = "未赋值";
                            switch (item1.wa.level)
                            {
                                case 9:
                                    levelname = "系统管理员";
                                    break;
                                case 1:
                                    levelname = "一级代理";
                                    break;
                                case 2:
                                    levelname = "二级代理";
                                    break;
                                case 3:
                                    levelname = "三级代理";
                                    break;
                                default:
                                    break;
                            }
                            
                        <tr class="gradeA" @*onclick="window.location.href='@Url.Action("AgentSelect", "SuperAdmin",new {id = item1.id })'"*@>
                            @*<td>@item1.id</td>*@
                            <td>@item1.wa.username</td>
                            <td>@item1.wa.real_name</td>
                            <td>@levelname</td>
                            <td>@item1.wa.balance</td>
                            <td>@item1.wa.accumulated_income</td>

                            <td>@item1.wa.area</td>


                            <td class="center">@Html.ActionLink("查看", "AgentSelect", new { id = item1.id })</td>
                            @*<td class="center">@Html.ActionLink("删除", "AgentDelete", new { id = item1.id })</td>*@

                        </tr>

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
        </div>
    </div>
</div>

