
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}
@model testlogin.Models.IndexModel
<script src="~/Scripts/jquery-1.10.2.js"></script>
<div style="width:200px;height:200px;margin:0 auto;">
    <input type="button" value="发起一个微信支付" id="btnPay" /><br /><br />
    <input type="button" value="微信退款" id="btnRefund" /><br /><br />
    <input type="button" value="微信企业付款" id="btnTransfers" /><br /><br />
</div>

<script type="http://res.wx.qq.com/open/js/jweixin-1.0.0.js">
</script>
<script type="text/javascript">
    $(function () {
        $("#btnPay").click(function () {
            @if (!Model.Success)
	        {
		    <text>
            alert(@Model.ErrorMessage);
            return;</text>
	        }
            var appId = '@Model.AppId';
            var timeStamp = "@Model.TimeStamp";
            var nonceStr = "@Model.NonceStr";
            var prepay_id = "@Model.PrepayID";
            var paySign = "@Model.PaySign";
            WeixinJSBridge.invoke('getBrandWCPayRequest',
            {
                "appId": appId,     //公众号名称，由商户传入
                "timeStamp": timeStamp,         //时间戳，自1970年以来的秒数
                "nonceStr": nonceStr, //随机串
                "package": "prepay_id=" + prepay_id,
                "signType": "MD5",         //微信签名方式:
                "paySign": paySign //微信签名
            },
            function (res) {
                switch (res.err_msg) {
                    case "get_brand_wcpay_request:ok":
                        alert('支付成功！');
                        break;
                    case "get_brand_wcpay_request:cancel":
                        break;
                    case "get_brand_wcpay_request:fail":
                        alert('支付失败！');
                        break;
                    default:
                }
                window.location = "@Model.ReturnUrl";
            });
        });

        $("#btnRefund").click(function () {
            $.get("/WeiXin/Refund", {}, function (JsonData) {
                if (!JsonData.Success) {
                    alert(JsonData.ErrorMessage);
                    return;
                }
                alert("退款成功");
            });

        });
        $("#btnTransfers").click(function () {
            $.get("/WeiXin/Transfers", {}, function (JsonData) {
                if (!JsonData.Success) {
                    alert(JsonData.ErrorMessage);
                    return;
                }
                alert("付款成功");
            });
        });
    });
</script>

