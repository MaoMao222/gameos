@using PagedList.Mvc;
@model PagedList.IPagedList<testlogin.EFModels.log_ingot_detail>

@{
    ViewBag.Title = "LogIngotDetail";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<table>
    <tr>
        <th>订单号</th>
        <th>游戏ID</th>        
        <th>原因</th>
        <th>渠道</th>
        <th>时间</th>
        <th>来源id</th>
        <th>上次钻石数</th>
        <th>现在钻石数</th>
    </tr>
@*@foreach (log_ingot_detail n in ViewData["datalist"] as List<log_ingot_detail>)
{*@
    @foreach (var item1 in Model)
    {
    <tr>
        <td>@item1.order_id</td>
        <td>@item1.kind_id</td>
        <td>@item1.reason</td>
        <td>@item1.channel</td>
        <td>@item1.create_time</td>
        <td>@item1.source_id</td>
        <td>@item1.before_ingot</td>
        <td>@item1.after_ingot（@item1.ingot_num）</td>
    </tr>
    }
    <tr>
        <th></th>
        <th> 共 @Model.PageCount 页，当前第 @Model.PageNumber 页</th>
        <th>@Html.PagedListPager(Model, page => Url.Action("LogAll", "Admin", new { page }))</th>
        <th></th>
        <th></th>
    </tr>
</table>
