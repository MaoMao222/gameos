
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" />
    <meta name="format-detection" content="telephone=no, address=no" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/admincss")
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
    
</head>
<body>
    <!--header-->
    <header class="header">
        <div class="pull-left yp-logo">
            <div class="pull-left yp-img"><img src="~/Content/img/yp_logo2.png" /></div>
            <h1 class="pull-right">云派系统</h1>
        </div>
        <div class="dropdown topbar-info-item pull-right">
            <a href="#" class="topbar-btn" id="dropdownMenu1" data-toggle="dropdown">

                <span id="userName">欢迎 @ViewBag.uname</span>

                <span class="icon-arrow-down"></span>
            </a>
            <ul class="dropdown-menu login-btn" aria-labelledby="dropdownMenu1">
                <li class="topbar-info-btn">
                    
                    <a href=@Url.Action("LoginOut", "Login")><span class="ng-binding">退出</span></a>
                </li>
            </ul>
        </div>
    </header>
    <!--/header-->
    <!--wrapper-->
    <div class="wrapper clearfix">
        <!--左侧-->
        <div class="slide">
            <div class="viewer-slidebar">
                <span class="icon-unfold" id="rwer"></span>
            </div>
            <ul>
                <li>@Html.ActionLink("玩家信息","SelectUser","Admin") </li>
                <li>@Html.ActionLink("日志", "LogAll", "Admin", new { page = 1 }) </li>
                <li>@Html.ActionLink("充值记录", "LogIngotDetail", "Admin") </li>
            </ul>
        </div>
        <!--/左侧-->
        <div class="iframe">            
            <div class="slide-right">
                <div class="content">
                    <div class="col-sm-12">
                        @RenderBody()
                        @*<iframe id="j-iframe" src="packagetools.html" width="100%" height="100%"></iframe>*@
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--/wrapper-->
    @Scripts.Render("~/Content/adminjs")
    
    @*<script>
$(function(){
	window.isFill = true;
});
    </script>*@
    <script src="~/Content/js/index.js"></script>

</body>
</html>
