
@{
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}
<div class="page-container">
    <h1>管理系统-登录</h1>
    <div class="login_div">

        @using (Html.BeginForm("Login", "SuperLogin", FormMethod.Post))
        {
            
            <input type="text" name="username" class="username" id="username" placeholder="请输入用户名">
            <input type="password" name="password" class="password" id="password" placeholder="输入密码">
            <button type="submit" class="submit" id="loginButton"><span></span>登录</button>
            <div class="error"><span>+</span></div>
            <div class="login_tips" style="color:red;">
                <div class="tips_msg">
                    <i class=fa fa-question-circle></i>
                    @Html.ValidationSummary()
                    @ViewBag.LoginState
                </div>
            </div>

        }
    </div>
</div>

