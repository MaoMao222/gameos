@model IEnumerable<testlogin.EFModels.game_config_product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">产品</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='@Url.Action("PCreate", "SuperAdmin")'">添加产品</button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>游戏名</th>
                            <th>产品名</th>
                            <th>价格</th>
                            @*<th>bind_buy_send</th>
                            <th>product_num</th>*@
                            <th>描述</th>
                            @*<th>key_word</th>
                            <th>product_id</th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item1 in Model)
                        {
                            string game= "斗地主";
                            if(item1.kind_id == 101)
                            {
                                game = "牛牛";
                            }
                            <tr class="gradeA">
                                <td>@item1.id</td>
                                <td>@game</td>
                                <td>@item1.product_name</td>
                                <td class="center">@item1.product_price</td>
                                @*<td class="center">@item1.bind_buy_send</td>
                                <td class="center">@item1.product_num</td>*@
                                <td class="center">@item1.describe</td>
                                @*<td class="center">@item1.key_word</td>
                                <td class="center">@item1.product_id</td>*@
                                <td class="center">@Html.ActionLink("删除", "PDelete", new { id = item1.id }, new { onclick = " if (confirm('确定删除?') == false) return false ;" })</td>

                            </tr>

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
        </div>
    </div>
</div>
