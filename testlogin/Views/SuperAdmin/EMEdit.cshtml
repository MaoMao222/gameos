@model testlogin.EFModels.game_config_email
@{
    ViewBag.Title = "邮件修改";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">邮件修改</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label>标题</label>
        @Html.EditorFor(model => model.title)
        @Html.ValidationMessageFor(model => model.title)
    </div>
    <div class="form-group">
        <label>内容</label>
        <textarea class="form-control" rows="3" name="detail" id="detail">@Model.detail</textarea>
        
        @Html.ValidationMessageFor(model => model.detail)
    </div>
    
    <div class="form-group">
        <label>类型</label>
        @Html.EditorFor(model => model.type)
        @Html.ValidationMessageFor(model => model.type)
    </div>
    <div class="form-group"><input type="submit" value="修改" /></div>

}
<div>
    @Html.ActionLink("返回", "Email")

</div>