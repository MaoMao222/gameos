@model IEnumerable<testlogin.EFModels.game_config_route>
@{
    ViewBag.Title = "Route";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">路由管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>游戏地址</th>
                            <th>游戏端口</th>
                            <th>游戏id</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item1 in Model)
                        {
                            string game = "斗地主";
                            if (item1.kind_id == 101)
                            {
                                game = "牛牛";
                            }
                            <tr class="gradeA">
                                <td>@item1.id</td>
                                <td>@item1.game_address</td>
                                <td>@item1.game_port</td>
                                <td class="center">@game</td>
                                <td class="center">@Html.ActionLink("删除", "RouteDelete", new { id = item1.id }, new { onclick = " if (confirm('确定删除?') == false) return false ;" })</td>

                            </tr>

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
        </div>
    </div>
</div>

