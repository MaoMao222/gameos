@using testlogin.EFModels;
@{
    ViewBag.Title = "代理详细信息";
    Layout = "~/Views/SuperAdmin/_LayoutHTML5Page.cshtml";
    var admin = ViewData["e_admin"] as web_admin;
    var user = ViewData["e_user"] as game_user_account;
    var login = ViewData["e_gamelogin"] as log_gamelogin;
    var f_admin = ViewData["e_f_admin"] as web_admin;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">代理详细信息</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@{
    //string xb;
    //if (user.Gender == 1)
    //{
    //    xb = "男";
    //}
    //else { xb = "女"; }
    string levelname;
    string p_invitecode;
    string p_name;
    string p_id;
    switch (admin.level)
    {
        case 9:
            levelname = "系统管理员";
            p_invitecode = "无";
            p_name = "无";
            break;
        case 1:
            levelname = "一级代理";

            break;
        case 2:
            levelname = "二级代理";

            break;
        default:
            levelname = "三级代理";

            break;
    }
    if (f_admin == null)
    {
        p_invitecode = "无";
        p_name = "无";
        p_id = "无";
    }
    else
    {
        p_invitecode = f_admin.invitecode.ToString();
        p_name = f_admin.username;
        p_id = f_admin.id.ToString();
    }

}
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                账号信息
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>账号</th>
                                <th>等级</th>
                                <th>姓名</th>
                                <th>手机号</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@admin.username</td>
                                <td>@levelname</td>
                                <td>@admin.real_name</td>
                                <td>@admin.phone</td>
                            </tr>
                        </tbody>

                        <thead>
                            <tr>
                                <th>游戏id</th>
                                <th>游戏昵称</th>
                                <th>注册时间</th>
                                <th>最近登录时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@admin.userid</td>
                                <td>@user.nick_name</td>
                                <td>@user.RegisterDate</td>
                                @{if (login == null)
                                    {
                                        <td>暂无时间</td>
                                    }
                                    else
                                    {
                                        <td>@login.logtime</td>
                                    }
                                }
                            </tr>
                        </tbody>

                        <thead>
                            <tr>
                                <th>邀请码</th>
                                <th>上级代理邀请码</th>
                                <th>上级代理ID</th>
                                <th>登录ip</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td>@admin.invitecode</td>
                                <td>@p_invitecode</td>
                                <td>@p_id</td>
                                @{if (login == null)
                                    {
                                        <td>暂无IP</td>
                                    }
                                    else
                                    {
                                        <td>@login.clientip</td>
                                    }
                                }
                                

                            </tr>
                        </tbody>

                        <thead>
                            <tr>
                                <th>微信号</th>
                                <th>会员数</th>
                                <th>金币</th>
                                <th>钻石</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@admin.wechat</td>
                                <td>@ViewBag.erzi</td>
                                <td>@user.Gold</td>
                                <td>@user.Ingot</td>
                            </tr>
                        </tbody>

                        <thead>
                            <tr>
                                <th>地区</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@admin.area</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>

        <!-- /.panel -->
        <p>
            <button type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("AgentEdit", "SuperAdmin", new { did = @admin.id, uid = @user.UserID })'">修改</button>           
            <button type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("AgentAll", "SuperAdmin")'">返回</button>
            <button type="button" class="btn btn-danger" onclick="if(confirm('确定要删除吗？\n\n请确认！'))location='@Url.Action("AgentDelete", "SuperAdmin",new {id = admin.id })'">删除</button>
            
        </p>
        
    </div>
    <!-- /.col-lg-6 -->
    <!-- /.col-lg-6 -->
</div>